NameVirtualHost *:80

<VirtualHost *:80>
    ServerName web-02.my-site.com
    ServerAlias www.my-site.com
    DocumentRoot /var/nfs/www/my-site.com/html
    <Directory /var/nfs/www/my-site.com/html>
        Options -Indexes +FollowSymLinks +MultiViews
        AllowOverride All
        Require all granted
    </Directory>
    ErrorLog /var/nfs/www/my-site.com/log/error.log
    CustomLog "| /bin/sh -c '/var/nfs/www/my-site.com/log/requests.log | /usr/bin/logger -thttpd_mynet -plocal1.notice'" combined
</VirtualHost>